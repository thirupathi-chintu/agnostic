#General
daemon=60                                                    # Check every 60 seconds.
syslog=yes                                                   # Log update msgs to syslog.
mail=root                                                    # Mail all msgs to root.
mail-failure=root                                            # Mail failed update msgs to root.
pid=/var/run/ddclient.pid                                    # Record PID in file.
use=web, web={{pl_dns_checkip}}/, web-skip='IP Address'        # Get ip from server.
server={{pl_dns_api}}                                          # IP update server.
protocol=dyndns2
login={{pl_dns_user_name}}                                             # Your username.
password={{pl_dns_password}}                                        # Password or MD5/SHA256 of password.
{{pl_dns_domin}}                                            # List one or more hostnames one on each line.
